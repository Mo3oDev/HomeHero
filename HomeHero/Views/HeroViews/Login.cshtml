@{
    ViewData["Title"] = "Inicio Sesion";
}

@section logo{
    <a class=" img-container " asp-area="" asp-controller="Home" asp-action="Index"><img class="img-fluid" src="~/Images/mainIcon.png" /></a>
}
@section inicioLI{

}
@section Main{
    <section class="darkMain">
        <div class="container text-white">
            <div class="row d-flex justify-content-between">
                <div class="col-6">
                    <from>
                        <h2> Iniciar Sesion</h2>
                        <p>¿Aun no estás registrado?<a asp-controller="Home" asp-action="SignUp">Registrate aquí.</a></p>
                        <form asp-controller="Home" asp-action="SignUpAction" method="post">
                            <div class="form-group">
                                <label for="email" class="control-label">EMAIL</label>
                                <input type="email" id="email" name="email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="password" class="control-label">CONTRASEÑA</label>
                                <input type="password" id="password" name="password" class="form-control" />
                            </div>
                            <a asp-controller="Home" asp-action="RecoverSendCode">Olvide mi contraseña</a>
                            <button type="submit" class="btn btn-primary m-2 fs-5">CONTINUAR</button>
                        </form>
                    </from>
                </div>
                <div class="col-6">
                    <img class="img-fluid" src="~/Images/logoLogIn.png" />
                    <h1><span class="h">H</span>ome<span class="h">H</span>Hero</h1>
                </div>
            </div>

        </div>
    </section>
}