@{
    ViewData["Title"] = "Recuperacion";
}
@section logo{
    <a class=" img-container " asp-area="" asp-controller="Home" asp-action="Index"><img class="img-fluid" src="~/Images/mainIcon.png" /></a>
}
@section scripts{}
@section inicioLI{
}
@section Main{
    <section class="darkMain">

        <div class="container text-white">
            <div class="row d-flex justify-content-between">
                <div class="col-lg-6 col-md-6 col-sm-12 p-4">
                    @if (!string.IsNullOrEmpty(ViewBag.RecoveryM))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.RecoveryM
                        </div>
                    }                   
                    <from>
                        <h1 class="secColor h1">Recupera tu contraseña</h1>
                        <p class="fw-bold">Enviaremos un correo con el pin de recuperación</p>
                        <form asp-controller="Home" asp-action="RecoverSendCodeAction" method="post">
                            <div class="form-group ">
                                <label for="email" class="control-label">EMAIL</label>
                                <input type="email" id="email" name="email" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary mt-2 fs-5">CONTINUAR</button>
                        </form>
                    </from>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 p-4 text-center">
                    <img class="img-fluid" src="~/Images/logoRecover.png" />
                    <h1 class="font-title title-page "><span class="h">H</span>ome<span class="h">H</span>ero</h1>
                </div>
            </div>

        </div>
    </section>
    }